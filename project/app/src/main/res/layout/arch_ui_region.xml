<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
    <data>
        <import type="android.view.View"/>
        <variable name="vm" type="org.owntracks.android.ui.regions.RoomRegionViewModel" />

    </data>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title=""

            android:elevation="4dp"
            app:contentInsetStart="72dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="112dp">


            </RelativeLayout>

        </android.support.v7.widget.Toolbar>



        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/default_spacing"
                android:layout_marginRight="@dimen/default_spacing">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/default_spacing_half"
                    android:layout_marginStart="@dimen/default_spacing_half"

                    android:layout_height="wrap_content"
                    android:hint="@string/description"
                    android:background="@android:color/transparent"
                    android:textCursorDrawable="@drawable/cursor_white"
                    android:gravity="bottom"
                    android:inputType="textVisiblePassword"
                    android:id="@+id/description"
                    android:text="@={vm.description}"
                    app:met_iconLeft="@drawable/ic_location"
                    android:onTextChanged="@{() -> vm.onTextChanged()}"
                    app:met_floatingLabel="normal"
                    app:met_baseColor="@color/textPrimary"
                    app:met_primaryColor="@color/accent"

                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_marginLeft="@dimen/default_spacing_half"
                    android:layout_marginStart="@dimen/default_spacing_half"
                    app:met_iconLeft="@drawable/ic_location"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/coordinates"
                    app:met_floatingLabel="normal"
                    app:met_baseColor="@color/textPrimary"
                    app:met_primaryColor="@color/accent"
                    android:enabled="false"
                    android:id="@+id/latitude"
                    android:text="@={org.owntracks.android.support.widgets.BindingConversions.convertToString(vm.latitude)}"

                    />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_marginLeft="@dimen/default_spacing_half"
                    android:layout_marginStart="@dimen/default_spacing_half"
                    app:met_iconLeft="@drawable/ic_location"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/coordinates"
                    app:met_floatingLabel="normal"
                    app:met_baseColor="@color/textPrimary"
                    app:met_primaryColor="@color/accent"
                    android:enabled="false"
                    android:id="@+id/longitude"
                    android:text="@={org.owntracks.android.support.widgets.BindingConversions.convertToString(vm.longitude)}"

                    />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_marginLeft="@dimen/default_spacing_half"
                    android:layout_marginStart="@dimen/default_spacing_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/radius"
                    android:id="@+id/radius"
                    android:digits="0123456789"
                    android:inputType="numberDecimal"
                    app:met_helperText="Meters"
                    app:met_floatingLabel="normal"
                    app:met_baseColor="@color/textPrimary"
                    app:met_primaryColor="@color/accent"
                    app:met_iconLeft="@drawable/ic_radius"
                    android:text='@={org.owntracks.android.support.widgets.BindingConversions.convertToString(vm.radius)}'                    />

                <TextView
                    android:layout_marginLeft="@dimen/default_spacing_half"
                    android:layout_marginStart="@dimen/default_spacing_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/waypointId"
                    android:text='@{org.owntracks.android.support.widgets.BindingConversions.convertToString(vm.id) }'                    />

                <TextView
                    android:layout_marginLeft="@dimen/default_spacing_half"
                    android:layout_marginStart="@dimen/default_spacing_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lastTriggered"
                    android:text='@{org.owntracks.android.support.widgets.BindingConversions.convertToString(vm.lastTriggered) }'                    />
                    />
                <TextView
                    android:layout_marginLeft="@dimen/default_spacing_half"
                    android:layout_marginStart="@dimen/default_spacing_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lastTransition"
                    android:text='@{org.owntracks.android.support.widgets.BindingConversions.convertToString(vm.lastTransition) }'                    />
                    />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>