<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
   <!-- android:bottom="-2dp" hides border,  0dp shows border   -->
    <item
        android:bottom="0dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp"
        >
        <shape android:shape="rectangle"  >
            <!-- Border color -->
            <stroke 
                android:width="1dp"
                android:color="@color/seperator" />

            	<!--  Background color -->
            <solid android:color="@color/card_aside" />
        </shape>
    </item>

</layer-list>
