<resources>

    <style name="Theme.Mqttitude" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Mqttitude</item>
        <item name="android:actionModeStyle">@style/ActionBar.Solid.Mqttitude.Actionmode</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.ActionBar.Overflow</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_accept</item>
    </style>

    <style name="ActionBar.Solid.Mqttitude.Actionmode" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_solid</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.Text</item>
    </style>

    <style name="ActionBar.Solid.Mqttitude" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:actionModeBackground">@drawable/ab_solid</item>
        <item name="android:background">@drawable/ab_solid</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.Text</item>
        <item name="android:icon">@drawable/ic_icon</item>
    </style>

</resources>