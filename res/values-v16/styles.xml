<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 16+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="Theme.Mqttitude" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Mqttitude</item>
        <item name="android:actionModeStyle">@style/ActionBar.Solid.Mqttitude.Actionmode</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.ActionBar.Overflow</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_accept</item>
    </style>

    <style name="card_header">
        <item name="android:textSize">@dimen/card_header</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:fontFamily">"sans-serif-light"</item>
        <item name="android:paddingLeft">@dimen/default_horizontal_spacing</item>
    </style>

    <style name="card_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_title</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/default_horizontal_spacing</item>
    </style>

    <style name="card_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_title</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">@dimen/default_horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/default_horizontal_spacing</item>
        <item name="android:paddingLeft">@dimen/default_horizontal_spacing</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_green</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="card_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_content</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:fontFamily">"sans-serif-light"</item>
        <item name="android:paddingLeft">@dimen/default_horizontal_spacing</item>
    </style>

    <style name="AppTheme.ActionBar.Text" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>