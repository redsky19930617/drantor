<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Styles for a stacked actionbar. We want the text color to be white when the tabs are in the actionbar. As there is no specific selector (thanks Google) we hack around it by checking the width. -->
    <style name="TextAppearance.Widget.TabWidget" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textColor">@android:color/white</item>
                <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        
    </style>
    

</resources>