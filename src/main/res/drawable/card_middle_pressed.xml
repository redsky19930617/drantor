<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
   <!-- android:bottom="-2dp" hides border,  -1dp shows 1do border, 0dp shows 2dp border   -->
    <item
        android:bottom="-2dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            <!-- Border color -->
            <stroke
                android:width="2dp"
                android:color="@color/background" />

            	<!--  Background color -->
            <solid android:color="@color/pressed" />
        </shape>
    </item>

</layer-list>
