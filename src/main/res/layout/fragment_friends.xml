<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/default_vertical_spacing" >

        <LinearLayout
            android:id="@+id/thisdevice"
            style="@style/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="1dp" >


                <Button
                    android:id="@+id/currentLocation"
                    style="@style/card_header"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingBottom="0dp"
                    android:paddingLeft="@dimen/default_horizontal_spacing"
                    android:paddingTop="0dp"
                    android:text="@string/na" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/friendsListView"
            style="@style/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/default_vertical_spacing_half"
            android:paddingTop="@dimen/default_vertical_spacing_half"
            android:visibility="gone" >
        </LinearLayout>
    </LinearLayout>

</ScrollView>